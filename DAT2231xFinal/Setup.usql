
// 3.1 Create database.
CREATE DATABASE IF NOT EXISTS retail;

DROP SCHEMA sales;

USE DATABASE retail;
// 3.2 Create the schema.
CREATE SCHEMA IF NOT EXISTS sales;

// 3.3 Create table for the stock.
CREATE TABLE sales.stock
(id int,
item string,
INDEX idx_id CLUSTERED (id)) //3.4 
    DISTRIBUTED BY HASH (item);

